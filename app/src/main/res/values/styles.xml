<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/pink</item>
    </style>
    <style name="StandardText">
        <item name="fontPath">fonts/IRANSansMobile.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#181818</item>
    </style>
    <style name="StandardTextGrey">
        <item name="fontPath">fonts/IRANSansMobile.ttf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#737373</item>
    </style>
    <style name="SmallText">
        <item name="fontPath">fonts/IRANSansMobile.ttf</item>
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#737373</item>
    </style>
    <style name="StandardTitle" parent="StandardText">
        <item name="fontPath">fonts/IRANSansMobile_Medium.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#181818</item>
    </style>
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/pink</item>
    </style>
</resources>
