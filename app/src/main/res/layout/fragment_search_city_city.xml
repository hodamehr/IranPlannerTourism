<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerCityCity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/margin_standard"
  >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <AutoCompleteTextView
                    android:id="@+id/fromCity_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:hint="@string/from_city"

                    />

                <AutoCompleteTextView
                    android:id="@+id/endCity_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fromCity_city"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:hint="@string/end_city" />

                <Button
                    android:id="@+id/searchOk_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_standard"
                    android:layout_below="@+id/endCity_city"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:hint="@string/search_ok"
                    android:background="@color/pink"
                    android:textColor="@color/white"
                    style="@style/StandardTitle"
         />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>
